<% if notice == 'create' %>
	<p id="notice">Объявление успешно добавлено и в данный момент проходит модерацию</p>
<% end %>
<% if notice == 'update' %>
	<p id="notice">Объявление успешно отредактировано</p>
<% end %>

<div class="jumbotron">
    <h2><%= Brand.find(@vehicle.brand_id).name %> <%= Model.find(@vehicle.model_id).name %></h2>
    <div>
        <div class="well" align="center">
            <div class="fotorama" data-nav="thumbs">
            <% @photos.each do |image| %>
                <a href="<%= image.photo.url(:normal) %>"><%= image_tag image.photo.url(:normal) %></a>
            <% end %>
            </div>
        </div>

<!-- Блок кнопок навигации (Временно доступен всем) -->
        <div  align="center">

            <%= link_to "Редактировать", {controller: controller_name, action: :edit}, class: "btn btn-success"%>
            
            <a href="#new_bid" id="popup_bid" class="btn btn-success">Оставить заявку</a>
            <a href="#new_price" id="popup_price" class="btn btn-success">Предложить цену</a>
            
            <a href="#lease" id="popup_lease" class="btn btn-success">Купить в лизинг</a>
            
        </div>

<!-- Таблица характеристик -->
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                <th colspan="3"></th>
                </tr>
            </thead> 
            <tbody>
                <tr>
                    <td class="text-primary">
                        Регион
                    </td>
                    <td>
                        <%= Region.find(@vehicle.region_id).name %>
                    </td>
                </tr>
                <tr>
                    <td class="text-primary">
                        Город
                    </td>
                    <td>
                        <%= City.find(@vehicle.city_id).name %>
                    </td>
                </tr>
                <tr>
                    <td class="text-primary">
                        Марка
                    </td>
                    <td>
                        <%= Brand.find(@vehicle.brand_id).name %>
                    </td>
                </tr>
                <tr>
                    <td class="text-primary">
                        Модель
                    </td>
                    <td>
                        <%= Model.find(@vehicle.model_id).name %>
                    </td>
                </tr>
                <%= render 'show_additional', locals: {vehicle: @vehicle} %>
                <tr>
                    <td class="text-primary">
                        Год выпуска
                    </td>
                    <td>
                        <%= @vehicle.year %>
                    </td>
                </tr>
                <tr>
                    <td class="text-primary">
                        Состояние
                    </td>
                    <td>
                        <%= @vehicle.status %>
                    </td>
                </tr>
                <tr>
                    <td>
                        VIN-Код
                    </td>
                    <td>
                        <%= @vehicle.vin_code %>
                    </td>
                </tr>
                <tr>
                <td class="text-primary">
                    Цена
                </td>
                <td class="text-success">
                    <strong> <%= number_with_delimiter(@vehicle.price, precision: 0, delimiter: " ") %> руб. </strong>
                </td>
                </tr>
            </tbody>
        </table>   
    </div>
<!-- Описание объявления -->
    <div>
        <%= @vehicle.description %> <br><br> 
    </div>
</div>        
